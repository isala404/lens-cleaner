{
  "manifest_version": 3,
  "name": "Lens Cleaner",
  "version": "1.0.0",
  "description": "AI-powered duplicate photo detector for Google Photos",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://photos.google.com/*",
    "https://cdn.jsdelivr.net/*",
    "https://huggingface.co/*"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://photos.google.com/*"],
      "js": ["content-scraper.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Lens Cleaner"
  },
  "icons": {
    "16": "vite.svg",
    "48": "vite.svg",
    "128": "vite.svg"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "dashboard.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}
