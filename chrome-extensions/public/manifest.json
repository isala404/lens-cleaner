{
	"manifest_version": 3,
	"name": "TopPics: Smart duplicate remover for Google Photos",
	"version": "1.0.0",
	"description": "Smartly identify and clean up duplicate or similar photos to unclutter your Google Photos library",
	"permissions": ["storage", "activeTab", "tabs", "scripting"],
	"host_permissions": [
		"https://photos.google.com/*",
		"https://cdn.jsdelivr.net/*",
		"https://huggingface.co/*"
	],
	"background": {
		"service_worker": "service-worker.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["https://photos.google.com/*"],
			"js": ["content-scraper.js"],
			"run_at": "document_idle"
		}
	],
	"action": {
		"default_popup": "popup.html",
		"default_title": "TopPics"
	},
	"icons": {
		"16": "favicon.png",
		"48": "favicon.png",
		"128": "favicon.png"
	},
	"web_accessible_resources": [
		{
			"resources": [
				"dashboard.html",
				"assets/*",
				"*.wasm",
				"*.mjs",
				"ort-wasm-simd.wasm",
				"ort-wasm-simd.mjs",
				"ort-wasm-simd-threaded.wasm",
				"ort-wasm-simd-threaded.mjs",
				"ort-wasm-simd-threaded.jsep.wasm",
				"ort-wasm-simd-threaded.jsep.mjs"
			],
			"matches": ["<all_urls>"]
		}
	],
	"content_security_policy": {
		"extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' https://umami.tallisa.dev https://toppics.tallisa.dev data:; img-src 'self' data: blob:;"
	}
}
